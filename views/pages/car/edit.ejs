<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Mobil</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item">
              <a href="/cars">Car</a>
            </li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form Edit Mobil <%= car.number_plate %>
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/cars/edit/<%= car.id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label style="color: red">*</label
                  ><label for="number_plate">Plat Nomor</label>
                  <input
                    type="text"
                    name="number_plate"
                    class="form-control"
                    id="number_plate"
                    value="<%= car.number_plate %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="information">Keterangan </label>
                  <label
                    style="
                      opacity: 0.9;
                      font-weight: 500;
                      color: #888;
                      margin-left: 2;
                    "
                    >(optional)</label
                  >
                  <input
                    type="text"
                    name="information"
                    class="form-control"
                    id="information"
                    value="<%= car.information !== null ? car.information : '' %>"
                    placeholder="Masukan keterangan tambahan"
                  />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
