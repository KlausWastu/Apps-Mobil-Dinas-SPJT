<div class="card-body">
  <table id="example2" class="table table-bordered table-hover text-center">
    <thead>
      <tr>
        <th>No.</th>
        <th>Plat Nomor Mobil</th>
        <th>Keterangan</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < cars.length; i++) {%>
      <tr>
        <td><%= i+1 %></td>
        <td><%= cars[i].number_plate %></td>
        <% if(cars[i].information === null) {%>
        <td style="opacity: 0.7; font-weight: 300; color: #585858">
          Tidak ada
        </td>
        <% } else { %>
        <td><%= cars[i].information %></td>
        <% } %>
        <td class="d-flex justify-content-center">
          <a
            href="/cars/edit/<%= cars[i].id %>"
            class="btn btn-warning btn-sm mr-2"
          >
            <i class="fas fa-pencil-alt mr-2"> </i>Edit
          </a>
          <form
            action="/cars/delete/<%= cars[i].id %>?_method=DELETE"
            style="display: inline-block"
            method="POST"
          >
            <button class="btn btn-danger btn-sm">
              <i class="fas fa-trash mr-2"></i>Hapus
            </button>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
