<div class="card-body">
  <table id="example2" class="table table-bordered table-hover text-center">
    <thead>
      <tr>
        <th>No.</th>
        <th>User</th>
        <th>Type</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < logs.length; i++) {%>
      <tr>
        <td><%= i+1 %></td>
        <td><%= logs[i].users.name %></td>
        <td><%= logs[i].type %></td>
        <td><%= logs[i].date %></td>
        <td>
          <a
            href="/logs/details/<%= logs[i].id %>"
            class="btn btn-primary btn-sm mr-2"
          >
            <i class="fas fa-info mr-2"> </i> Details
          </a>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
